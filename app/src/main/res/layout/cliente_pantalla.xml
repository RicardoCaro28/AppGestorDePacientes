<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nombre_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce Nombre:" />

    <EditText
        android:id="@+id/direccion_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce Direccion:" />

    <EditText
        android:id="@+id/celular_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce Celular:" />

    <EditText
        android:id="@+id/mail_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce Mail:" />

    <EditText
        android:id="@+id/fecha_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce Fecha:" />

    <Button
        android:id="@+id/añadir_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="añadir" />

    <Button
        android:id="@+id/ver_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VER" />

    <Button
        android:id="@+id/ver_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ver lista" />

    <Button
        android:id="@+id/activos_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pacientes Activos" />
</LinearLayout>
